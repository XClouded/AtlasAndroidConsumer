<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/atlWelcomeLayout"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/white" >
	<RelativeLayout
		android:id="@+id/topBarMenu"
		android:layout_width="fill_parent"
		android:layout_height="50dp"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:background="@drawable/navbar" >
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:layout_marginBottom="5dp"
			android:layout_marginTop="5dp"
			android:src="@drawable/atl_welcome_atlas_logo" >
		</ImageView>
	</RelativeLayout>
	<ScrollView
		android:id="@+id/cal_edit_content_scroll_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/topBarMenu"
		android:scrollbars="none" >
		<RelativeLayout
			android:id="@+id/atlWelcomeContentBody"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >
			<ImageView
				android:id="@+id/atlWelcomeTitle"
				android:layout_width="match_parent"
				android:layout_height="95dp"
				android:layout_alignParentTop="true"
				android:layout_centerHorizontal="true"
				android:src="@drawable/atl_welcome_background_top" >
			</ImageView>
			<RelativeLayout
				android:id="@+id/atlWelcomeEnterYouEmailContent"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_below="@+id/atlWelcomeTitle" >
				<ImageView
					android:id="@+id/atlWelcomeEnterYouEmailTitle"
					android:layout_width="match_parent"
					android:layout_height="155dp"
					android:layout_centerHorizontal="true"
					android:layout_marginTop="35dp"
					android:src="@drawable/atl_welcome_background_center" />
				<EditText
					android:id="@+id/atlWelcomeEnterEmailEditText"
					android:layout_width="match_parent"
					android:layout_height="38dp"
					android:layout_alignParentLeft="true"
					android:layout_alignTop="@+id/atlWelcomeEnterYouEmailTitle"
					android:layout_marginLeft="25dp"
					android:layout_marginRight="70dp"
					android:layout_marginTop="47dp"
					android:background="@color/white"
					android:textColor="@color/black"
					android:ems="11"
					android:hint="@string/sign_in_email_address_hint"
					android:inputType="textEmailAddress" />
			</RelativeLayout>
			<RelativeLayout
				android:id="@+id/atlWelcomeEnter"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_below="@+id/atlWelcomeEnterYouEmailContent"
				android:layout_marginTop="40dp" >
				<ImageButton
					android:id="@+id/atlWelcomeEnterBtn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:background="@color/transparent"
					android:src="@drawable/atl_welcome_enter" />
				<View
				    android:id="@+id/atlWelcomeEnterBtnView"
					android:layout_width="fill_parent"
					android:layout_height="2dp"
					android:layout_below="@+id/atlWelcomeEnterBtn"
					android:layout_marginTop="40dp" />
				

				
			</RelativeLayout>
			
		</RelativeLayout>
	</ScrollView>
</RelativeLayout>